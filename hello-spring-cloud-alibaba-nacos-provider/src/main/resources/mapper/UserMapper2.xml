<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zlm.hello.spring.cloud.alibaba.nacos.provider.dao.UserMapper">

    <update id="updateUserById">
        UPDATE `myshop`.`user`
        SET
            `id` =  #{id} ,
            `name` = #{name},
            `password` = #{password}
        WHERE
            `id` = #{id}
    </update>

    <insert id="insertUser" parameterType="com.zlm.hello.spring.cloud.alibaba.nacos.provider.model.User">
        INSERT INTO `myshop`.`user` (`name`, `password`)
        VALUES
            (#{name}, #{password})
    </insert>
    <insert id="insertForeach" parameterType="java.util.List" useGeneratedKeys="false">
        insert into `myshop`.`user` (`name`, `password`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.name},
            #{item.password}
            )
        </foreach>
    </insert>
    <select id="selectUsers" resultType="com.zlm.hello.spring.cloud.alibaba.nacos.provider.model.User">
        select * from `myshop`.`user`
    </select>
</mapper>